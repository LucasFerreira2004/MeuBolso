{
  "name": "teste-electron-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "Aplicação Electron para gerenciamento financeiro pessoal.",
  "author": {
    "name": "Seu Nome",
    "email": "seu.email@example.com",
    "url": "https://seusite.com"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "electron .",
    "package": "electron-builder",
    "make": "electron-builder --mac --win --linux"
  },
  "dependencies": {
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.7.9",
    "chart.js": "^4.4.7",
    "date-fns": "^4.1.0",
    "electron-store": "^10.0.0",
    "jwt-decode": "^4.0.0",
    "react": "^18.3.1",
    "react-avatar-edit": "^1.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-datepicker": "^7.6.0",
    "react-day-picker": "^9.5.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.5",
    "react-intl-currency-input": "^0.2.6",
    "react-loading-skeleton": "^3.5.0",
    "react-router-dom": "^7.0.2",
    "react-select": "^5.10.0",
    "react-toastify": "^11.0.3",
    "recharts": "^2.14.1"
  },
  "devDependencies": {
    "@types/electron-store": "^1.3.1",
    "@types/jwt-decode": "^2.2.1",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^30.0.1",
    "electron-builder": "^25.1.8",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.testeelectron.app",
    "productName": "TesteElectronApp",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "dist-electron/**"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/icon.icns"
    }
  },
  "main": "dist-electron/main.js"
}